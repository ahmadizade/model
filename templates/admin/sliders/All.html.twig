                    </li>
                </ul>#}
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <table id="categories_table" class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Position</th>
                        <th>Route</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for slider in sliders %}
                        <tr>
                            <td>{{ slider.slider_id }}</td>
                            <td>{{ slider.slider_title }}</td>
                            <td>{{ slider.position }}</td>
                            <td>{{ slider.route }}</td>
                            <td>
                                <div class="btn-group">
                                    <button data-toggle="dropdown" class="btn btn-default dropdown-toggle" type="button" aria-expanded="false"><span class="status">{{ slider.status }}</span><span class="caret"></span>
                                    </button>
                                    <ul role="menu" class="dropdown-menu">
                                        <li><a href="#" class="set-status" data-action="active" data-id="{{ slider.slider_id }}">Active</a></li>
                                        <li><a href="#" class="set-status" data-action="inactive" data-id="{{ slider.slider_id }}">Inactive</a></li>
                                        <li><a href="#" class="set-status" data-action="archive" data-id="{{ slider.slider_id }}">Archive</a></li>
                                        <li><a href="#" class="set-status" data-action="delete" data-id="{{ slider.slider_id }}">Delete</a></li>
                                    </ul>
                                </div>
                                <a href="{{ path('admin_all_to_medias',{'reference_type':'slider','reference_id':slider.slider_id}) }}" class=""><i class="fa fa-file-image-o fa-2x"></i></a>
                            </td>
                        </tr>

                    {% endfor %}
                    </tbody>
                </table>
                <input type="hidden" id="update_url" value="{{ path("admin_edit_slider_status") }}">
                {#<input type="hidden" id="delete_url" value="{{ path("admin_delete_slider") }}">
                <input type="hidden" id="archive_url" value="{{ path("admin_archive_slider") }}">#}
            </div>
        </div>
    </div>


